<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns="http://www.mulesoft.org/schema/mule/core"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:paypal-wsdl="http://www.mulesoft.org/schema/mule/paypal-wsdl"
      xmlns:context="http://www.springframework.org/schema/context"
      xsi:schemaLocation="http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
        http://www.mulesoft.org/schema/mule/paypal-wsdl http://www.mulesoft.org/schema/mule/paypal-wsdl/1.0/mule-paypal-wsdl.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-current.xsd">

    <context:property-placeholder location="${PAYPAL_CREDENTIALS}"/>

    <paypal-wsdl:config name="Paypal" password="${password}" username="${username}" serviceAddress="${serviceAddress}"
                       signature="${signature}"/>

</mule>
